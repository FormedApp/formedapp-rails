<h1>Tracks</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

  <% if @tracks.empty? %>
    <tr>
      <td colspan=2>There aren't any tracks yet.</td>
    </tr>
  <% end %>

  <% @tracks.each do |track| %>
    <tr>
      <td><%= track.title %></td>
      <td><%= link_to edit_track_path(track) %>
    </tr>
  <% end %>
</table>

<%= link_to "New Track", new_track_path, class: 'btn btn-success' %>

